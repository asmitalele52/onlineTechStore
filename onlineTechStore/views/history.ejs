<% include _layouts/header %>

<% if (history.length > 0) { %>

<h1 class="page-title">My History</h1>
<br><br>

<table class="table table-striped alignmiddle">
    
    <tr>
        <th>Image</th>
        <th>Title</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Subtotal</th>
    </tr>
    
    <% var total = 0; %>
    <% history.forEach(function(product){ %>
    <% var sub = parseFloat(product.qty * product.price).toFixed(2) %>
    <% total += +sub %>
    <tr>
        <td><img class="cpi" src="<%= product.image %>" alt=""></td>
        <td><%= product.title %></td>
        <td>$<%= product.price %></td>
        <td><%= product.qty %></td>
        <td>$<%= sub %></td>
    </tr>
    <% }); %>

    
</table>


<% } else {%>
<h3 class="text-center">No History.</h3>
<% } %>



<% include _layouts/footer %>